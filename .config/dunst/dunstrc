# light-theme-start
[urgency_low]
timeout = 2
background = "#ebdbb2"
foreground = "#282828"
frame_color = "#3c3836"
icon = ~/.config/dunst/normal.png

[urgency_normal]
timeout = 5
background = "#fbf1c7"
foreground = "#504945"
frame_color = "#665c54"
icon = ~/.config/dunst/normal.png

[urgency_critical]
timeout = 0
background = "#f9f5d7"
foreground = "#cc241d"
frame_color = "#9d0006"
icon = ~/.config/dunst/critical.png
# light-theme-end
